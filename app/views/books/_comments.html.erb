<% @book.book_comments.each do |book_comment| %>
  <table>
    <tbody>
      <tr>
        <td><%= image_tag book_comment.user.get_profile_image(50,50) %><br>
          <%= link_to book_comment.user.name, user_path(book_comment.user) %></td>
        <td>　<%= book_comment.comment %>　　</td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book, book_comment), class: "btn btn-danger", method: :delete, remote: true, data: {"turbolinks" => false} %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>

