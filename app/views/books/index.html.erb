<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/0edaaf4d35.js" crossorigin="anonymous"></script>
  </head>

<div class="container-fluid px-5">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>

      <div>
         <%= image_tag @user.get_profile_image(100,100) %>
         <h5>name　　<%= @user.name  || "name" %></h5>
         <h5>introduction　　<%= @user.introduction  || "introduction" %></h5>

      </div>
      <div class="col-5 mt-5 mb-3" style="background-color: #e8cf72;">
        <%= link_to edit_user_path(current_user), class: "btn btn-outline-secondary" do %>
          <i class="fa-solid fa-user-gear"></i>
        <% end %>
      </div>

      <h3>New book</h3>
      <%= form_with model: Book do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
        <h5>Opinion</h5>
        <%= f.text_area :body %>
        <br>
        <%= button_tag( class: "btn btn-success my-3") do %>
          <%= content_tag :span, "Create Book", class: "glyphicon glyphicon-plus" %>
        <% end %>

      <% end %>

    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table>
        <thead>
          <tr class="border-top">
            <th></th>
            <th>Title</th>
            <th>Body</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr class="row-md-12 border-top">
               <td class="col-3 p-3"><%= image_tag @user.get_profile_image(100,100) %></td>
            </div>
            <td class="col-3 p-3 align-top"><%= link_to book.title, book_path(book.id) %></td>
            <td class="col-6 p-3 align-top"><%= book.body %></td>
          </tr>
          <% end %>
    </tbody>
  </table>
       </div>
  </div>
</div>