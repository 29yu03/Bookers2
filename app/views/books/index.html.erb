<!DOCTYPE html>
<html>
  <head>
    <script src="https://kit.fontawesome.com/0edaaf4d35.js" crossorigin="anonymous"></script>
  </head>

<div class="container px-5">
   <% if @book.errors.any? %>
  <h4 class="pt-3"><%= @book.errors.count %> errors prohibited this obj from being saved:</h4>

  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <div class="row">
    <%= render 'users/list', books: @books %>


    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table width="100%">
        <thead>
          <tr class="border-top">
            <th></th>
            <th class="p-3">Title</th>
            <th class="p-3">Opinion</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr class="border-top">
              <td class="p-3">
                <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100,100) %></td>
                <% end %>
              <td class="p-3 align-top"><%= link_to book.title, book_path(book) %></td>
              <td class="p-3 align-top"><%= book.body %></td>

              <td class="p-3", id="favorite_btn_<%= book.id %>">
                <%= render 'favorites/btn', book: book %>
              </td>

              <td class="p-3">
                <p>コメント数：<%= book.book_comments.count %></p>
              </td>
              <td>
                <%= render 'view_count', book: book %>
              </td>
            </tr>

          <% end %>

        </tbody>
      </table>
    </div>
    </div>
  </div>
</div>
</html>