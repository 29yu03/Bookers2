<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <%= value %>
  </div>
<% end %>

<div class="container px-5">
  <div class="row">
    <%= render 'users/list', books: @books %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table>
        <tbody>
          <tr class="row-md-12 border-top">
            <td class="col-1 p-3"><%= image_tag @book.user.get_profile_image(100,100) %>
            <br><%= link_to @book.user.name  || "name", user_path(@book.user.id) %></td>
            <td class="col-1 p-3 align-top"><%= link_to @book.title %></td>
            <td class="col-1 p-3 align-top"><%= @book.body %></td>
            <td class="col-1 mt-5 mb-3">
              <% if @book.user == current_user %>
                <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
              <% end %>
            </td>
            <td class="col-3 mt-5 mb-3">
              <% if @book.user == current_user %>
                <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？", class: "btn btn-danger" %>
              <% end %>
            </td>
            <td class="col-1 mt-5 mb-3">
              <% if @book.favorited_by?(current_user) %>
                <p>
                  <%= link_to book_favorite_path(@book), method: :delete do %>
                    ♥<%= @book.favorites.count %>
                  <% end %>
                </p>
              <% else %>
                <p>
                  <%= link_to book_favorite_path(@book), method: :post do %>
                    ♡<%= @book.favorites.count %>
                  <% end %>
                </p>
              <% end %>
            </td>
            <td class="col-4 mt-5 mb-3">
              <p>コメント数：<%= @book.book_comments.count %></p>
            </td>
          </tr>
        </tbody>
      </table>

      <% @book.book_comments.each do |book_comment| %>
      <table>
        <tbody>
          <tr>
            <td><%= image_tag book_comment.user.get_profile_image(50,50) %><br>
            <%= link_to book_comment.user.name || "name", user_path(book_comment.user.id) %></td>
            <td>　<%= book_comment.comment %>　　</td>
            <td>
              <% if book_comment.user == current_user %>
                <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment), method: :delete, class: "btn btn-danger" %>
              <% end %>
            </td>
      <% end %>
          </tr>
        </tbody>
      </table>
      <div class ="row-md-12">
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, class: 'form-control', rows: 5, cols: 100 %>
          <br>
          <%= f.submit "送信" %>
        <% end %>
      </div>
    </div>
  </div>
</div>