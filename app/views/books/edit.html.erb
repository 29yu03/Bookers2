<h1>Editing Book</h1>
<%= form_with model: @book do |f| %>

  <label for="inputName">Title</label>
  <br>
  <%= f.text_field :title, autofocus: true, id:"inputBook" %>
  <br>
  <label for="inputImage">Opinion</label>
  <br>
  <%= f.text_area :body, autofocus: true, id:"inputBody" %>
  <br>
  <%= button_tag( class: "btn btn-success") do %>
    <%= content_tag :span, "Update User", class: "glyphicon glyphicon-plus" %>
  <% end %>

<% end %>