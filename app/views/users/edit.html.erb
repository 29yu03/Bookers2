<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">

      <h2 class="pt-3">User info</h1>

      <% if @user.errors.any? %>
        <h3><%= @user.errors.count %> error prohibited this obj from being saved:</h3>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

        <%= form_with model: @user do |f| %>
        <label for="inputName">Name</label>
        <br>
        <%= f.text_field :name, autofocus: true, id:"inputName" %>
        <br>
        <br>
        <label for="inputImage">Image</label>
        <br>
        <%= f.file_field :profile_image, accept: "image/*" %>
        <br>
        <br>
        <label for="inputImage">Introduction</label>
        <br>
        <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction" %>
        <br>
        <br>
        <%= button_tag( class: "btn btn-secondary") do %>
          <%= content_tag :span, "Update User", class: "glyphicon glyphicon-plus" %>
        <% end %>
      <% end %>
      </div>
    </div>
</div>

