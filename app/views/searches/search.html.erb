<h2>Books search for</h2>

<table class="table table-hover table-inverse">


  <% if @range == "User" %>
  <thead>
    <th class="col-3 py-2 pr-5"></th>
    <th class="col-3 py-3 pr-5">name</th>
    <th class="col-2 py-3 pr-5">introduction</th>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag user.get_profile_image(50,50) %></td>
        <td><%= link_to user.name, user_path(user.id) %></td>
        <td><%= user.introduction %></td>
       </tr>
      <% end %>
    </tbody>
  <% else %>
  <thead>
    <th class="col-3 py-2 pr-5"></th>
    <th class="col-3 py-3 pr-5">Title</th>
    <th class="col-2 py-3 pr-5">Opinion</th>
  </thead>
  <tbody>
     <% @books.each do |book| %>
        <tr>
          <td><%= image_tag book.user.get_profile_image(100,100) %></td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  <% end %>
</table>